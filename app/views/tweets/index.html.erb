<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<table>
  <thead>
  <tr>
    <th>Status</th>
    <th>Author</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.status %></td>
        <td></td>
        <td><%= link_to 'Show', [@zombie, tweet] %></td>
        <td><%= link_to 'Edit', edit_zombie_tweet_path(@zombie, tweet) %></td>
        <td><%= link_to 'Destroy', [@zombie, tweet ], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tweet', new_zombie_tweet_path(@zombie) %> | <%= link_to 'Back to Zombies', zombies_path %>
